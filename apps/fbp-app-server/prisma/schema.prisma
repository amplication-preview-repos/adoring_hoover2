datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Claim {
  claimAmount  Float?
  consent      Boolean?
  createdAt    DateTime         @default(now())
  id           String           @id @default(cuid())
  invoice      Json?
  paymentProof Json?
  status       EnumClaimStatus?
  updatedAt    DateTime         @updatedAt
}

model Category {
  consumedFbp Int?
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  totalFbp    Int?
  updatedAt   DateTime @updatedAt
}

model Profile {
  createdAt      DateTime @default(now())
  email          String?
  fbpAllocation  Int?
  fbpConsumption Int?
  firstName      String?
  id             String   @id @default(cuid())
  lastName       String?
  phoneNumber    String?
  updatedAt      DateTime @updatedAt
}

model PayrollMonth {
  createdAt DateTime  @default(now())
  endDate   DateTime?
  id        String    @id @default(cuid())
  month     String?
  startDate DateTime?
  updatedAt DateTime  @updatedAt
  year      Int?
}

model User {
  createdAt     DateTime @default(now())
  email         String?  @unique
  emailVerified Boolean?
  firstName     String?
  id            String   @id @default(cuid())
  lastName      String?
  password      String
  phoneNumber   String?
  phoneVerified Boolean?
  roles         Json
  updatedAt     DateTime @updatedAt
  username      String   @unique
}

enum EnumClaimStatus {
  Option1
}
